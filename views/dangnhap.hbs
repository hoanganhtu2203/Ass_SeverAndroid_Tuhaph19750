<body class="position-absolute top-50 start-50 translate-middle">
    <form action="/login" method="get" class="was-validated ">
  <div class="form-group">
    <h2>Đăng Nhập</h2>
    <label for="email">Nhập Email:</label>
    <input type="email" class="form-control" placeholder="Enter email" id="email" name="email">
    <div class="valid-feedback"></div>
    <div class="invalid-feedback">Yêu cầu nhập mã sản phẩm.</div>
  </div>
  <div class="form-group">
    <label for="pwd">Nhập Mật Khẩu:</label>
    <input type="password" class="form-control" placeholder="Enter password" id="password" name="password">
    <div class="valid-feedback"></div>
    <div class="invalid-feedback">Yêu cầu nhập mã sản phẩm.</div>
  </div>
  <div class="form-group form-check">
    <label class="form-check-label">
      <input class="form-check-input" type="checkbox"> Ghi nhớ đăng nhập
    </label>
  </div>
  <button type="submit" class="btn btn-primary">Đăng Nhập</button>
  <a href="/dangki">Đăng kí tài khoản</a>
</form>

</body>
